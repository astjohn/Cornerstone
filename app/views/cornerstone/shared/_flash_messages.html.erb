<% if flash[:notice] || flash[:alert] %>
  <div id="flash_messages">
    <% if flash[:notice] %>
      <div id="flash_notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div id="flash_alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
<% end %>

